<h1>Burgers!</h1>

<h2>Burgers NOT ate!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{>burgers/burgers-block devoured=false}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers ATE!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burgers-block devoured=true}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="b">Burger:</label>
        <input type="text" id="b" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>