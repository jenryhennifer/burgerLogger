<h1>Burgers!</h1>

<h2>Burgers NOT ate!</h2>

<ul>
  {{#each }}
    {{#unless devoured}}
    <li>
	{{name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		{{#if sleep}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
	</button>
</li>

    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers ATE!</h2>

<ul>
  {{#each }}
    {{#if devoured}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="b">Burger:</label>
    <input type="text" id="b" name="name">
  </div>
  <button type="submit">Add Cat</button>
</form>

